<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#D6D6D6"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Sendcomplaints">
    <TextView
        android:id="@+id/text"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Complaints" />

    <EditText
        android:id="@+id/nofoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="20dp"
        android:background="@drawable/inputbtn"
        android:layout_margin="10dp"
        android:inputType="textPersonName"
        android:hint="Enter Complaint Here" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addbtn"
        android:layout_width="200dp"
        android:padding="20dp"
        android:backgroundTint="#C3EF92"
        android:background="@drawable/custbtn"
        android:layout_height="wrap_content"
        android:text="Complaint" />

    <TextView
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Reply" />

    <ListView
        android:id="@+id/lv12"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>