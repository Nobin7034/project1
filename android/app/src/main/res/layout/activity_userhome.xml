<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#CCC8C8"
    android:layout_height="match_parent"
    tools:context=".Userhome">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Home"
        android:layout_marginBottom="50dp"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewstores"
        android:background="@drawable/custbtn"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:drawablePadding=".8dp"
        android:layout_height="60dp"
        android:text="View Stores" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cart"
        android:background="@drawable/custbtn"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:drawablePadding=".8dp"
        android:layout_height="60dp"
        android:text="My Cart" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mybookings"
        android:background="@drawable/custbtn"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:drawablePadding=".8dp"
        android:layout_height="60dp"
        android:text="My Bookings" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/complaints"
        android:background="@drawable/custbtn"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:drawablePadding=".8dp"
        android:layout_height="60dp"
        android:text="Complaints and Reply" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewdiet"
        android:background="@drawable/custbtn"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:drawablePadding=".8dp"
        android:layout_height="60dp"
        android:text="View Diet team" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout"
        android:background="@drawable/custbtn"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:drawablePadding=".8dp"
        android:layout_height="60dp"
        android:text="Logout" />



</LinearLayout>